<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fatih.pixelium" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DrawingScreen"
            android:label="@string/title_activity_drawing_screen" >
            <intent-filter>
                <action android:name="android.intent.action.DRAWINGSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PrevWorksScreen"
            android:label="@string/title_activity_prev_works_screen" >
            <intent-filter>
                <action android:name="android.intent.action.PREVWORKSSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AlarmScreen"
            android:label="@string/title_activity_alarm_screen" >
            <intent-filter>
                <action android:name="android.intent.action.ALARMSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ChildLockScreen"
            android:label="@string/title_activity_child_lock_screen" >
            <intent-filter>
                <action android:name="android.intent.action.CHILDLOCKSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>

</manifest>
