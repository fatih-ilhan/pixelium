<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button1"
        android:onClick="Tick"
        android:layout_marginBottom="60dp"
        android:background="@drawable/drawing_panel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button2"
        android:onClick="Tick"
        android:background="@drawable/gallery_icon"
        android:layout_alignTop="@+id/button1"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button3"
        android:onClick="Tick"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/alarm_lock"
        android:layout_alignTop="@+id/button2"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button4"
        android:onClick="Tick"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/child_lock" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Drawing Panel"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:paddingTop="6dp"
        android:background="#41a0ff"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Previous Works"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:paddingTop="6dp"
        android:background="#41a0ff"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Alarm Lock"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:background="#41a0ff"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Child Lock"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:background="#41a0ff"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Switch
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:background="#41a0ff"/>

    <Switch
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:checked="false"
        android:background="#41a0ff"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PIXELIUM"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="60sp"
        android:textColor="#2051ff" />

</RelativeLayout>
